<Window x:Class="Galactic.DiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diagnostics Scan" Height="500" Width="600" WindowStartupLocation="CenterOwner" Background="#1E1E1E">
  <Grid Margin="20">
    <StackPanel>
      <TextBlock Text="Real-Time Diagnostics" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" TextAlignment="Center"/>
      <TextBlock x:Name="DiagnosticsText" FontSize="16" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,20"/>
      <ProgressBar x:Name="DiagnosticsProgressBar" Height="25" Minimum="0" Maximum="100" Foreground="DodgerBlue" Background="#555555" Margin="0,0,0,20"/>
      <Button Content="Close" Width="100" Height="40" HorizontalAlignment="Center" Background="#007ACC" Foreground="White" Click="CloseButton_Click"/>
    </StackPanel>
  </Grid>
</Window>
