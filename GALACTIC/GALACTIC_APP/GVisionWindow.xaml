<Window x:Class="Galactic.GVisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="G-Vision" Height="600" Width="400" WindowStartupLocation="CenterOwner" Background="#1E1E1E">
  <Grid>
    <Border BorderBrush="DodgerBlue" BorderThickness="2" CornerRadius="10" Margin="10">
      <Grid>
        <Image x:Name="GVisionImage" Stretch="Uniform"/>
        <!-- Transparent overlay for interactivity -->
        <Canvas x:Name="InteractionCanvas" Background="Transparent" MouseLeftButtonDown="InteractionCanvas_MouseLeftButtonDown"/>
      </Grid>
    </Border>
  </Grid>
</Window>
