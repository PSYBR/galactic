<Window x:Class="Galactic.SPenCalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="S-Pen Calibration" Height="400" Width="600" WindowStartupLocation="CenterOwner" Background="#1E1E1E">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="S-Pen Calibration" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Adjust the slider to calibrate the S-Pen sensitivity." Foreground="White" FontSize="14" Margin="0,0,0,10"/>
            <Slider x:Name="SensitivitySlider" Minimum="0" Maximum="100" Value="50" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,0,0,20"/>
            <Button Content="Calibrate" Width="150" Height="40" HorizontalAlignment="Center" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="CalibrateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
